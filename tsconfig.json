{
  "compilerOptions": {
      "outDir": "./dist/",
      "allowJs": true,
      "target": "es5",
      "sourceMap": true,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "strict": true,
      "allowUnusedLabels": false,
      "allowUnreachableCode": false,
      "module": "es2022",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
